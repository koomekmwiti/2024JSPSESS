@page
@using ESS.Areas.Identity.Pages.Account
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm email";
}

<div class="row align-items-center justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card">

            <div class="card-body p-4">
                <div class="text-center mt-2">
                    <h5 class="text-primary">Welcome Back !</h5>
                    <p class="text-muted">Sign in to continue to ESS Portal.</p>
                </div>
                <div class="p-2 mt-4">

                    <!--Start-->
                    <partial name="_StatusMessage" model="Model.StatusMessage" />

                    <div>
                        <p>
                            <a id="login" asp-page="./Login">Back to Login page</a>
                        </p>
                    </div>
                    <!--End-->

                </div>

            </div>
        </div>

        <div class="mt-5 text-center">
            <p>© <script>document.write(new Date().getFullYear())</script> DEFT TECHNOLOGIES</p>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

