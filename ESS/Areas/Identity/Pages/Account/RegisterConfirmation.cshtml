@page
@using ESS.Areas.Identity.Pages.Account
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Register confirmation";
}

<div class="row align-items-center justify-content-center">
    <div class="col-md-8 col-lg-6 col-xl-5">
        <div class="card">

            <div class="card-body p-4">
                <div class="text-center mt-2">
                    <h5 class="text-primary">ESS Portal</h5>
                    <p class="text-muted">Email confirmation.</p>
                </div>
                <div class="p-2 mt-4">

                    <!--Start-->
                    @{
                        if (@Model.DisplayConfirmAccountLink)
                        {
                            /*
                            * <p>
                            This app does not currently have a real email sender registered, see <a href="https://aka.ms/aspaccountconf">these docs</a> for how to configure a real email sender.
                            Normally this would be emailed: <a id="confirm-link" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
                            </p>
                            */
                        }
                        else
                        {
                            /*
                            * <p>
                            Please check your email to confirm your account.
                            </p>
                            */
                        }

                        <p>
                            Please check your email <b>@Model.Email</b> to confirm your account.
                        </p>

                    }
                    <!--End-->

                </div>

            </div>
        </div>

        <div class="mt-5 text-center">
            <p>© <script>document.write(new Date().getFullYear())</script> DEFT TECHNOLOGIES</p>
        </div>

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

