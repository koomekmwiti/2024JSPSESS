@model IEnumerable<AppraisalListServiceReference.DEFT_AppraisalList>

@section AppStyles {
	<!-- Bootstrap Css -->
	<link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
	<!-- Icons Css -->
	<link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
	<!-- App Css-->
	<link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

}
<!-- start page title -->
<div class="row">
	<div class="col-12">
		<div class="page-title-box d-flex align-items-center justify-content-between">
			<h4 class="mb-0">Appraisal Review</h4>

			<div class="page-title-right">
				<ol class="breadcrumb m-0">
					<li class="breadcrumb-item"><a href="javascript: void(0);">ESS</a></li>
					<li class="breadcrumb-item">Approval</li>
					<li class="breadcrumb-item active">Review</li>
				</ol>
			</div>

		</div>
	</div>
</div>
<!-- end page title -->

<div class="row mb-4">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">

				<div class="table-responsive">
					<table class="table table-striped">
						<thead>
							<tr>
								<th>Entry No.</th>
								<th>Document No.</th>
								<th>Document Type</th>
								<th>Staff No.</th>
								<th>Staff Name</th>
								<th>Action</th>
							</tr>
						</thead>
						@foreach (var item in Model)
						{
							<tr>
								<td>@item.Appraisal_No</td>
								<td>@item.Employee_No</td>
								<td>@item.Appraisee_Name</td>
								<td>@item.Appraisees_Job_Title</td>
								<td>@item.Appraiser_No</td>
								<td>
									<a asp-action="Details" asp-route-id="@item.Appraisal_No">View Appraisal</a>
									@* <a asp-action="Edit" asp-route-id="@item.Appraisal_No">Edit</a> *@
								</td>
							</tr>

						}
					</table>
				</div>

			</div><!-- end card-body -->
		</div><!-- end card -->
	</div><!-- end col -->
</div>

@section AppScripts {

	<!-- JAVASCRIPT -->
	<script src="~/assets/libs/jquery/jquery.min.js"></script>
	<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
	<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
	<script src="~/assets/libs/node-waves/waves.min.js"></script>
	<script src="~/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
	<script src="~/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>

	<!-- form repeater js -->
	<script src="~/assets/libs/jquery.repeater/jquery.repeater.min.js"></script>

	<script src="~/assets/js/pages/form-repeater.int.js"></script>

	<!-- App js -->
	<script src="~/assets/js/app.js"></script>

}