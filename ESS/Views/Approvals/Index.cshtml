@* @model IEnumerable<ApprovalEntriesServiceReference.DEFT_ApprovalEntries> *@
@{
	IEnumerable<DeftOData.DEFT_ApprovalEntries> ApprovalEntries = ViewBag.LeaveQuery;
}

@section AppStyles {
	<!-- Bootstrap Css -->
	<link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
	<!-- Icons Css -->
	<link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
	<!-- App Css-->
	<link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

}
<!-- start page title -->
<div class="row">
	<div class="col-12">
		<div class="page-title-box d-flex align-items-center justify-content-between">
			<h4 class="mb-0">Leave Approval</h4>

			<div class="page-title-right">
				<ol class="breadcrumb m-0">
					<li class="breadcrumb-item"><a href="javascript: void(0);">ESS</a></li>
					<li class="breadcrumb-item">Approval</li>
					<li class="breadcrumb-item active">Leave</li>
				</ol>
			</div>

		</div>
	</div>
</div>
<!-- end page title -->

<div class="row mb-4">
	<div class="col-xl-12">
		<div class="card">
			<div class="card-body">
				@if (TempData["SuccessMessage"] != null)
				{
					<div class="alert alert-info alert-dismissible" role="alert">
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
						@TempData["SuccessMessage"]
					</div>
				}
				<div class="table-responsive">
					<table class="table table-striped">
						<thead>
							<tr>
								<th>Entry No.</th>
								<th>Document No.</th>
								<th>Document Type</th>
								<th>Staff No.</th>
								<th>Staff Name</th>
								<th>Action</th>
							</tr>
						</thead>
						<tbody>
							@foreach (var item in ApprovalEntries)
							{
								<tr>
									<td>@item.Entry_No</td>
									<td>@item.Document_No</td>
									<td>@item.Document_Type</td>
									<td>@item.Staff_No</td>
									<td></td>
									<td>
										<a asp-action="ViewDocument" asp-route-id="@item.Document_No">View Document</a>
									</td>
								</tr>
							}
						</tbody>
					</table>
				</div>

			</div><!-- end card-body -->
		</div><!-- end card -->
	</div><!-- end col -->
</div>

@section AppScripts {

	<!-- JAVASCRIPT -->
	<script src="~/assets/libs/jquery/jquery.min.js"></script>
	<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
	<script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
	<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
	<script src="~/assets/libs/node-waves/waves.min.js"></script>
	<script src="~/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
	<script src="~/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>

	<!-- form repeater js -->
	<script src="~/assets/libs/jquery.repeater/jquery.repeater.min.js"></script>

	<script src="~/assets/js/pages/form-repeater.int.js"></script>

	<!-- App js -->
	<script src="~/assets/js/app.js"></script>

}