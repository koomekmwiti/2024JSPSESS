
@{
    IEnumerable<DeftOData.DEFT_LeaveApplicationList> LeaveList = ViewBag.LeaveQuery;
}

@{
    ViewData["Title"] = "Leave Application List";
}

@section AppStyles {
    <!-- Bootstrap Css -->
    <link href="~/assets/css/bootstrap.min.css" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="~/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="~/assets/css/app.min.css" id="app-style" rel="stylesheet" type="text/css" />

}
<!-- start page title -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-flex align-items-center justify-content-between">
            <!--Start of Page Title-->
            <h4 class="mb-0">@ViewData["Title"]</h4>
            <!--End of Page Title-->
            <!--Start of Breadcrumb-->
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);"></a>ESS</li>
                    <li class="breadcrumb-item">Leave</li>
                    <li class="breadcrumb-item active">@ViewData["Title"]</li>
                </ol>
            </div>
            <!--End of Breadcrumb-->
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-xl-12">
        <div class="card">
            <div class="card-body">
                <div>
                    <h5 style="display:inline">List </h5>
                    <a asp-action="RegisterId"> <i class="fa fa-plus float-end" title="Add" style="font-size: 23px;"></i></a>
                </div>
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-info alert-dismissible" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        @TempData["Message"]
                    </div>
                }

                @if (TempData["CancelMessage"] != null)
                {
                    <div class="alert alert-info alert-dismissible" role="alert">
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        @TempData["CancelMessage"]
                    </div>
                }
                <div class="row g-0 p-2">

                    <!-- Nav tabs -->
                    <ul class="nav nav-tabs nav-tabs-custom nav-justified" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#active" role="tab">
                                <span class="d-block d-sm-none"><i class="fa fa-home"></i></span>
                                <span class="d-none d-sm-block">Open</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#pending_approval" role="tab">
                                <span class="d-block d-sm-none"><i class="fa fa-user"></i></span>
                                <span class="d-none d-sm-block">Pending Approval</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#approved" role="tab">
                                <span class="d-block d-sm-none"><i class="fa fa-user"></i></span>
                                <span class="d-none d-sm-block">Approved</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-bs-toggle="tab" href="#rejected" role="tab">
                                <span class="d-block d-sm-none"><i class="fa fa-envelope"></i></span>
                                <span class="d-none d-sm-block">Rejected</span>
                            </a>
                        </li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content p-3 text-muted">
                        <div class="tab-pane active" id="active" role="tabpanel">

                            <div class="table-rep-plugin">
                                <div class="table-responsive mb-0" data-pattern="priority-columns">

                                    <div class="table-responsive">
                                        <table class="table mb-0 table-borderless table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Application No.</th>
                                                    <th>Application Date</th>
                                                    <th>Days Applied</th>
                                                    <th>Start Date</th>
                                                    <th>End Date</th>
                                                    <th>Status</th>
                                                    <th>Leave Period</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in LeaveList)
                                                {
                                                    if (item.Status.Equals("Open"))
                                                    {
                                                        <tr>
                                                            <td>@item.Application_No</td>
                                                            <td>@item.Application_Date</td>
                                                            <td>@item.Days_Applied</td>
                                                            <td>@item.Start_Date</td>
                                                            <td>@item.End_Date</td>
                                                            <td>@item.Status</td>
                                                            <td>@item.Leave_Period</td>
                                                            <td>
                                                                <a asp-action="EditLeave" asp-route-Application_No="@item.Application_No">Edit</a> |
                                                                <a asp-action="DetailsLeave" asp-route-id="@item.Application_No">Details</a>
                                                            </td>
                                                        </tr>
                                                    }

                                                }

                                            </tbody>
                                        </table>
                                    </div>

                                </div>
                            </div>

                        </div>

                        <div class="tab-pane" id="pending_approval" role="tabpanel">

                            <div class="table-rep-plugin">
                                <div class="table-responsive mb-0" data-pattern="priority-columns">
                                    <div class="table-responsive">

                                        <table class="table mb-0 table-borderless table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Application No.</th>
                                                    <th>Application Date</th>
                                                    <th>Days Applied</th>
                                                    <th>Start Date</th>
                                                    <th>End Date</th>
                                                    <th>Status</th>
                                                    <th>Leave Period</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in LeaveList)
                                                {
                                                    if (item.Status.Equals("Pending Approval"))
                                                    {
                                                        <tr>
                                                            <td>@item.Application_No</td>
                                                            <td>@item.Application_Date</td>
                                                            <td>@item.Days_Applied</td>
                                                            <td>@item.Start_Date</td>
                                                            <td>@item.End_Date</td>
                                                            <td>@item.Status</td>
                                                            <td>@item.Leave_Period</td>
                                                            <td>
                                                                <a asp-action="ViewApprover" asp-route-id="@item.Application_No">View Approvers</a> | 
                                                                <a asp-action="DetailsLeave" asp-route-id="@item.Application_No">Details</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }

                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="tab-pane" id="approved" role="tabpanel">

                            <div class="table-rep-plugin">
                                <div class="table-responsive mb-0" data-pattern="priority-columns">
                                    <div class="table-responsive">

                                        <table class="table mb-0 table-borderless table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Application No.</th>
                                                    <th>Application Date</th>
                                                    <th>Days Applied</th>
                                                    <th>Start Date</th>
                                                    <th>End Date</th>
                                                    <th>Status</th>
                                                    <th>Leave Period</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in LeaveList)
                                                {
                                                    if (item.Status.Equals("Released"))
                                                    {
                                                        <tr>
                                                            <td>@item.Application_No</td>
                                                            <td>@item.Application_Date</td>
                                                            <td>@item.Days_Applied</td>
                                                            <td>@item.Start_Date</td>
                                                            <td>@item.End_Date</td>
                                                            <td>@item.Status</td>
                                                            <td>@item.Leave_Period</td>
                                                            <td>
                                                                <a asp-action="DetailsLeave" asp-route-id="@item.Application_No">Details</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                }

                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="tab-pane" id="rejected" role="tabpanel">

                            <div class="table-rep-plugin">
                                <div class="table-responsive mb-0" data-pattern="priority-columns">
                                    <div class="table-responsive">

                                        <table class="table mb-0 table-borderless table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Application No.</th>
                                                    <th>Application Date</th>
                                                    <th>Days Applied</th>
                                                    <th>Start Date</th>
                                                    <th>End Date</th>
                                                    <th>Status</th>
                                                    <th>Leave Period</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in LeaveList)
                                                {
                                                    if (item.Status.Equals("Rejected"))
                                                    {
                                                        <tr>
                                                            <td>@item.Application_No</td>
                                                            <td>@item.Application_Date</td>
                                                            <td>@item.Days_Applied</td>
                                                            <td>@item.Start_Date</td>
                                                            <td>@item.End_Date</td>
                                                            <td>@item.Status</td>
                                                            <td>@item.Leave_Period</td>
                                                            <td>
                                                                <a asp-action="DetailsLeave" asp-route-id="@item.Application_No">Details</a>
                                                            </td>
                                                        </tr>
                                                    }
                                                    
                                                }

                                            </tbody>
                                        </table>

                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
</div>


@section AppScripts {

    <!-- JAVASCRIPT -->
    <script src="~/assets/libs/jquery/jquery.min.js"></script>
    <script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="~/assets/libs/node-waves/waves.min.js"></script>
    <script src="~/assets/libs/waypoints/lib/jquery.waypoints.min.js"></script>
    <script src="~/assets/libs/jquery.counterup/jquery.counterup.min.js"></script>

    <!-- form repeater js -->
    <script src="~/assets/libs/jquery.repeater/jquery.repeater.min.js"></script>

    <script src="~/assets/js/pages/form-repeater.int.js"></script>

    <!-- App js -->
    <script src="~/assets/js/app.js"></script>

}

